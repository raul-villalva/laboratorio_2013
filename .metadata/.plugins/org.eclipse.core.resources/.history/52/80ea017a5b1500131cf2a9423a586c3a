package primero;

import java.util.ArrayList;

public class PaintMe {
	
	private ArrayList<FiguraGeometrica> paleta = new ArrayList<FiguraGeometrica>();
	
	
	public void init(){
		Circulo fg= new Circulo();
		fg.setColor("azul");
		fg.setRadio(2);
		 fg= new Circulo();
		 paleta.add(fg);
		fg.setColor("amarillo");
		fg.setRadio(3);
		paleta.add(fg);
		
		Rectangulo r= new Rectangulo();
		r.setAlto(2);
		r.setAncho(3);
		r.setColor("verde");
		paleta.add(r);
		
		r= new Rectangulo();
		r.setColor("azul");
		r.setAlto(4);
		r.setAncho(10);
		paleta.add(r);
		

		r= new Rectangulo();
		r.setColor("que se yo");
		r.setAlto(51);
		r.setAncho(54);
		paleta.add(r);
		

	}


	public ArrayList<FiguraGeometrica> getPaleta() {
		return paleta;
	}


	public void setPaleta(ArrayList<FiguraGeometrica> paleta) {
		this.paleta = paleta;
	}

}
