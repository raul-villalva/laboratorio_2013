package primero;

import java.util.ArrayList;

public class Paint {
	
	private ArrayList<FiguraGeometrica> paleta = new ArrayList<FiguraGeometrica>();
	
	
	public void init(){
		FiguraGeometrica fg=(Circulo) new Circulo();
		fg.setColor("azul");
		fg.setRadio(2);
		 fg= new Circulo();
		fg.setColor("amarillo");
		fg.setRadio(3);
		paleta.add(fg);
		Rectangulo r= new Rectangulo();
		r.setColor("azul");
		r.setAlto(2);
		r.setAncho(3);
		r.setColor("");
		
	}


	public ArrayList<FiguraGeometrica> getPaleta() {
		return paleta;
	}


	public void setPaleta(ArrayList<FiguraGeometrica> paleta) {
		this.paleta = paleta;
	}

}
